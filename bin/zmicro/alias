#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro sapling <args ...>"
  echo ""

  sapling --help
}

version() {
  sapling --version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    sapling "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
